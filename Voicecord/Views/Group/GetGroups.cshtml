@model IEnumerable<Voicecord.Models.UserGroup>

@{
    ViewData["Title"] = "GetGroup";
}

<h1>GetGroup</h1>





<p>
    <input asp-action="AddToGroup">Create New</input>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LinkImageGroup)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name) @item.Id
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LinkImageGroup) @item.Id
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="GetGroup" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
